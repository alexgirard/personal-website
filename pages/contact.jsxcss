section {
  height: 100%;
  padding: 50px 30px;
}

.fade-up {
  animation-duration: 0.5s;
  animation-fill-mode: both;
}

.module {
  max-width: 900px;
}

h1 {
  font-size: 144px;
  font-weight: 900;
  text-align: left;
  text-transform: uppercase;
  margin: 0;
  white-space: nowrap;
  // text-shadow: -1px -1px 0 #FFC328, 1px -1px 0 #FFC328, -1px 1px 0 #FFC328, 1px 1px 0 #FFC328;
  color: #FFC328;
}

.side {
  display: flex;
}

.icons {
  padding-left: 3rem;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

svg {
  padding: 0 1rem;
}

// iPad
@media only screen and (min-width : 768px) and (max-width : 1024px) {
  h1 {
    font-size: 100px;
  }

.module {
    max-width: 600px;
  }
}

// mobile
@media screen and (max-width: 600px) {
  .side {
    display: block;
  }

  .icons {
    padding: 2rem 0;
    justify-content: center;
  }

  .icon-row {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  section {
    height: auto;
  }

  .module {
    padding-top: 5rem;
  }

  svg {
    padding: 0 1rem 0 0;
  }

  h1 {
    font-size: 50px;
  }
}

// animations
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
  }

  to {
    opacity: 1;
    transform: none;
  }
}

.fadeInUp {
  animation-name: fadeInUp;
}
